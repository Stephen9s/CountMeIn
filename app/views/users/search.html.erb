<h1>Search Users</h1>
<%= form_tag :controller => 'users', :action => 'search' do %>
      <%= text_field_tag :search, params[:search], :id => 'search_field' %>
     <%= submit_tag "Search", :name => nil %> 
 <% end %> 

<% if @users.nil? %>

No results

<% else %>
<ul>
	<% @users.each do |user| %>
		<li><%= user.username %> | <%= user.f_name %> | <%= user.l_name %></li>
	<% end %>
</ul>
<% end %>
