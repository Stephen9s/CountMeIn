<!DOCTYPE html>
<html>
<head>
  <title>Count Me In!</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<!-- START_HIGHLIGHT -->
<body class='<%= controller.controller_name %>'>
<div id="container">
	<div id="banner">
		<%= @page_title || "Count Me In!" %>
	</div>
	<div id="menu">
		<ul>
			<li><%= link_to "Home", home_path %></li>
				<% if session[:user_id] %>
					<li><%= link_to "Profile", profile_path %></li>
					<li><%= link_to "Search", search_path %></li>
					<li><%= link_to "Friend", friends_path %></li>
					<li><%= link_to "Post Event", :controller => 'events', :action => 'new' %></li>
					<li><%= link_to "Log out", :controller => 'sessions', :action => 'logout' %></li>
				<% end %>
		</ul>
	</div>
	<div id="main">
		<%= yield %>
	</div>
	<div id="footer"></div>
</div>
</body>
</html>
