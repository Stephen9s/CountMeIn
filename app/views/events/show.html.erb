<h1><%= @event.name %></h1>
<dl>
  <dd>Even Location: <%= @event.location %></dd>
  <dd>Start date: <%= @event.start_date %></dd>
  <dd>End date: <%= @event.end_date %></dd>
  <dd>Is public: <%= @event.public %></dd>
  <dd>Owner: <%= @event.user_id %></dd>
  <% if @event.user_id.equal?(current_user.id) %>
  	<dd><%= button_to 'Destroy', { :controller => "events", :action => "destroy", :id => @event }, :confirm => 'Are you sure?', :method => :delete %></dd>
  <% elsif @event.memberships.find(:all, :conditions => ['user_id = ?', current_user.id]).size == 1 %>
    <dd><%= link_to 'Count Me Out!', leave_path(:id => @event.id), :method => :post %></dd>
  <% else %>
  	<dd><%= link_to "Count Me In!", join_path(:event_id => @event.id), :method => :post %></dd>
  <% end %>
</dl>

<% content_for :sidebar do %>
	<div id="members">
	<h3>Members</h3>
		<% @event_memberships.each do |member| %>
			<dl>
				<dt>
					<%= member.l_name %>, <%= member.f_name %><% if member.user_id == current_user.id %> (<b>Owner</b>)<%end%>
				</dt>
			</dl>
		<% end %>
	</div>
<% end %>

