<h1 align="center">Post Event</h1>
<div align="center">
	<table>
    	<tr>
    		<%= form_for(:event, :url => {:controller => 'events', :action => 'create'}) do |f| %>
    		<td class="label">Event title:</td>
    		<td class="input"><%= f.text_field :name %></td>
    	</tr>
    	<tr>
    		<td class="label">Start date:</td>
    		<td class="input"><%= f.datepicker :start_date %></td>
    	</tr>
    	<tr>
    		<td class="label">End date:</td>
    		<td class="input"><%= f.datepicker :end_date %></td>
    	</tr>
    	<tr>
    		<td class="label">Location:</td>
    		<td class="input"><%= f.text_field :location %></td>
    	</tr>
    	<tr>
    		<td class="label">Public?</td>
    		<td class="input"><%= f.check_box(:public) %></td>
    	</tr>
    	<tr>
    		<td><%= f.submit :Post, :class => "button" %></td>
    		<% end %>
    	</tr>
    </table>
    
	<% if @event.errors.any? %>
		<ul class="new_event_errors">
			<% for message_error in @event.errors.full_messages %>
			<li>* <%= message_error %></li>
			<% end %>
		</ul>
	<% end %>
</div>